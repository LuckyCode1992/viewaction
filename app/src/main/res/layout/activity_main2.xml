<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shuxingdonghua.Main2Activity">

    <ImageView
        android:id="@+id/iv"
       android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kefu_2_pdf" />

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fangda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放大" />

            <Button
                android:id="@+id/suoxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缩小" />

            <Button
                android:id="@+id/jianxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渐现" />

            <Button
                android:id="@+id/jianyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渐隐" />

            <Button
                android:id="@+id/yidong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动" />

            <Button
                android:id="@+id/xuanzhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中心旋转" />

            <Button
                android:id="@+id/yidongjiajianxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动加渐显" />
            <Button
                android:id="@+id/yidongjiaxuanzhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移动加放大缩小加旋转" />
            <Button
                android:id="@+id/yidongjiafangdasuoxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="先移动再缩放" />
            <Button
                android:id="@+id/zzhouxuanzhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z轴旋转" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>