<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.justcode.hxl.权限问题.PermissionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/cb_READ_CALENDAR"
                android:tag="READ_CALENDAR"
                android:text="日历权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_CAMERA"
                android:tag="CAMERA"
                android:text="相机权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_WRITE_CONTACTS"
                android:tag="WRITE_CONTACTS"
                android:text="联系人权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_ACCESS_FINE_LOCATION"
                android:tag="ACCESS_FINE_LOCATION"
                android:text="位置权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_RECORD_AUDIO"
                android:tag="RECORD_AUDIO"
                android:text="麦克风权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_CALL_PHONE"
                android:tag="CALL_PHONE"
                android:text="电话权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/cb_BODY_SENSORS"
                android:tag="BODY_SENSORS"
                android:text="传感器权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_SEND_SMS"
                android:tag="SEND_SMS"
                android:text="短信权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_WRITE_EXTERNAL_STORAGE"
                android:tag="WRITE_EXTERNAL_STORAGE"
                android:text="存储权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn"
                android:text="获取权限"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_cancale"
                android:text="去取消权限/查看权限情况"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
