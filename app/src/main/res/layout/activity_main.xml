                android:text="封装的recycleview" />

            <TextView
                android:id="@+id/tv_activity_stack_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="折叠卡片" />

            <TextView
                android:id="@+id/tv_activity_drawerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="侧滑菜单" />

            <TextView
                android:id="@+id/tv_activity_coordinator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
